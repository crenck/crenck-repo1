{
    "settings": {
        "connection": {
            "client": "thumbnailClient",
            "port": "perforce:1666",
            "user": "thumbuser"
        },
        "logFile": "/home/thumbuser/thumblog.out"
    },
    "conversions": [
        {
	    "extensions": [
                "gif",
                "tiff"
            ],
	    "execPath": "/usr/local/bin/convert",
            "arguments": [
                "-resize",
                "160x160",
                "$FILEIN[0]",
                "$FILEOUT"
            ]
        },
        {
	    "extensions": [
                "ppm"
            ],
	    "execPath": "/usr/local/bin/convert",
            "arguments": [
                "$FILEIN",
                "--thumbnail",
                "160x160",
                "$FILEOUT"
            ] 
        },
        {
	    "extensions": [
                "pdf"
            ],
	    "execPath": "/usr/local/bin/convert",
            "arguments": [
                "-resize",
                "x160",
                "-background",
                "white",
                "-alpha",
                "remove",
                "$FILEIN[0]",
                "$FILEOUT"
            ]
        },
        {
	    "extensions": [
                "jpg",
                "jpeg"
            ],
	    "execPath": "/usr/local/bin/convert",
            "arguments": [
                "-resize",
                "160x160",
                "$FILEIN",
                "$FILEOUT"
            ],
            "convertToPng": false
        },
        {
	    "extensions": [
                "ai",
                "svg"
            ],
	    "execPath": "/usr/local/bin/convert",
            "arguments": [
                "-resize",
                "160x160",
                "$FILEIN",
                "$FILEOUT"
            ]
        }
    ]
}
